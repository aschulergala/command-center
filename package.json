{
  "name": "galachain-command-center",
  "version": "1.0.0",
  "description": "GalaChain Command Center dApp",
  "private": true,
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nest start --watch",
    "dev:client": "cd client && npx vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npx vue-tsc --noEmit && npx vite build",
    "build:server": "nest build",
    "start:prod": "node dist/main.js",
    "test": "npm run test:server",
    "test:server": "jest",
    "lint": "eslint \"{src,client/src}/**/*.{ts,tsx,vue}\"",
    "typecheck": "tsc --noEmit && cd client && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/serve-static": "^4.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.3"
  }
}
